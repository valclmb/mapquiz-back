# Variables d'environnement Backend - MapQuiz
# Copier ce fichier vers .env et remplir les valeurs

# ===================
# BASE DE DONNÉES
# ===================
DATABASE_URL="postgresql://postgres:password@localhost:5432/mapquiz_dev"

# ===================
# AUTHENTICATION
# ===================
BETTER_AUTH_URL="http://localhost:3000"

# Google OAuth (créer dans Google Cloud Console)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# ===================
# APPLICATION
# ===================
SERVER_URL="http://localhost:3000"
NODE_ENV="development"
PORT=3000
HOST="0.0.0.0"

# ===================
# GITHUB INTEGRATION (optionnel)
# ===================
# Pour le système de bug reports
GITHUB_TOKEN="your-github-personal-token"
GITHUB_REPO_OWNER="map-quiz"
GITHUB_REPO_NAME="mapquiz-back"

